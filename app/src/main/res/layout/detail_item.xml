<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dtl_Nombre"
        android:layout_width="378dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:textSize="21dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dtl_imagen"
        android:layout_width="158dp"
        android:layout_height="174dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="108dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dtl_Nombre"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/dtl_ingredientes"
        android:layout_width="153dp"
        android:layout_height="312dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:scrollbars="vertical"
        android:textSize="19dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toEndOf="@+id/dtl_imagen"
        app:layout_constraintTop_toBottomOf="@+id/dtl_Nombre" />

    <TextView
        android:id="@+id/dtl_preparacion"
        android:layout_width="347dp"
        android:layout_height="281dp"
        android:layout_marginTop="72dp"
        android:scrollbars = "vertical"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dtl_imagen" />

</androidx.constraintlayout.widget.ConstraintLayout>